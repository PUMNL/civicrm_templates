<?xml version="1.0" encoding="iso-8859-1" ?>

<CaseType>
  <name>HBF</name>
  <ActivityTypes>
    <ActivityType>
      <name>Open Case</name>
      <max_instances>1</max_instances>
    </ActivityType>
    <ActivityType>
      <name>Contact with Customer</name>
    </ActivityType>
    <ActivityType>
      <name>Contact about Customer</name>
    </ActivityType>
    <ActivityType>
      <name>Accept of Reject Product by Expert</name>
    </ActivityType>
      <ActivityType>
      <name>Change Case Type</name>
    </ActivityType>
    <ActivityType>
      <name>Change Case Status</name>
    </ActivityType>
    <ActivityType>
      <name>Change Case Start Date</name>
    </ActivityType>
    <ActivityType>
      <name>Link Cases</name>
    </ActivityType>
  </ActivityTypes>
  <ActivitySets>
    <ActivitySet>
      <name>standard_timeline</name>
      <label>Standard Timeline</label>
      <timeline>true</timeline>
      <ActivityTypes>
        <ActivityType>
          <name>Open Case</name>
          <status>Completed</status>
        </ActivityType>
      </ActivityTypes>
    </ActivitySet>
	<ActivitySet>
      <name>intake</name>
      <label>Intake</label>
      <timeline>true</timeline>
      <ActivityTypes>
        <ActivityType>
          <name>Projectmanager or expert creates product HBF with concept budget</name>
          <reference_activity>Open Case</reference_activity>
          <reference_offset>5</reference_offset>
          <reference_select>newest</reference_select>
        </ActivityType>
        <ActivityType>
          <name>Check and assess HBF application</name>
          <reference_activity>Open Case</reference_activity>
          <reference_offset>8</reference_offset>
          <reference_select>newest</reference_select>
        </ActivityType>
		</ActivityTypes>
    </ActivitySet>
  <ActivitySet>
      <name>preparation</name>
      <label>Preparation</label>
      <timeline>true</timeline>
      <ActivityTypes>
        <ActivityType>
          <name>Transfer the approved budget to projectmanager, expert or PUM Rep</name>
          <reference_activity>Open Case</reference_activity>
          <reference_offset>17</reference_offset>
          <reference_select>newest</reference_select>
        </ActivityType>
        </ActivityTypes>
    </ActivitySet>
	</ActivitySets>
  <CaseRoles>
    <RelationshipType>
        <name>Sector Coordinator</name>
        <creator>1</creator>
    </RelationshipType>
    <RelationshipType>
        <name>PUM-expert</name>
    </RelationshipType>
    <RelationshipType>
        <name>Country Coordinator</name>
    </RelationshipType>
	<RelationshipType>
        <name>Project Officer</name>
    </RelationshipType>	
 </CaseRoles>
</CaseType>
